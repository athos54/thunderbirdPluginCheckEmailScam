{
  "manifest_version": 2,
  "name": "Email Spam Checker",
  "version": "1.1.0",
  "description": "Analiza emails con ChatGPT para detectar spam",
  "author": "Tu nombre",
  "applications": {
    "gecko": {
      "id": "email-spam-checker@example.com",
      "strict_min_version": "102.0"
    }
  },
  "permissions": [
    "messagesRead",
    "accountsRead",
    "storage",
    "https://api.openai.com/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "message_display_action": {
    "default_title": "Analizar con ChatGPT",
    "default_icon": "icons/icon-48.png",
    "default_popup": "popup.html"
  }
}
